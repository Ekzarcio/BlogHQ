<% if !user_signed_in? %>
  <% authenticate_user! %>
<% end %>
<h3>Редактирование: </h3>

<%= form_for @article do |f| %>
  <% if @article && @article.errors.any? %>
    <p>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </p>
  <% end %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>

  <p><%= f.submit 'Сохранить изменения' %> <%= link_to 'Отмена', article_path(@article) %></p>

<% end %>